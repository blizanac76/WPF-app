        <Button x:Name="DeleteStudentButton" Content="Obrisi studenta" HorizontalAlignment="Left" Margin="314,220,0,0" VerticalAlignment="Top" Width="90" Click="DeleteStudentButton_Click"/>
        <DataGrid x:Name="StudentsDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="200" Margin="10,260,0,0" VerticalAlignment="Top" Width="500"/>




    </Grid>
</Window>
